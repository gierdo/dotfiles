{
  "java.import.gradle.enabled": true,
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.format.settings.url": "~/.dotfiles/.config/nvim/java_codestyle.xml",
  "java.format.settings.profile": "Default",
  "java.format.enabled": true,
  "java.format.onType.enabled": true,
  "java.format.comments.enabled": true,
  "java.errors.incompleteClasspath.severity": "ignore",
  "yaml.validate": false,
  "yaml.schemas": {
    "~/go/src/github.com/awslabs/goformation/schema/cloudformation.schema.json": "/*",
    "kubernetes": "/*"
  },
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "args": ["--background-index", "--fallback-style=google"],
      "rootPatterns": [
        "compile_flags.txt",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": ["c", "cpp", "objc", "objcpp"]
    },
    "golang": {
      "command": "go-langserver",
      "filetypes": ["go"],
      "initializationOptions": {
        "gocodeCompletionEnabled": true,
        "diagnosticsEnabled": false
      }
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  },
  "coc.source.buffer.enable": true,
  "coc.source.buffer.priority": 1,
  "coc.preferences.formatOnSaveFiletypes": ["rust", "java"],
  "solargraph.formatting": true,
  "solargraph.definitions": true,
  "solargraph.references": true,
  "solargraph.autoformat": true
}
