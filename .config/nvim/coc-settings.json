{
  "java.import.gradle.enabled": true,
  "java.import.maven.enabled": true,
  "java.maven.downloadSources": true,
  "java.configuration.maven.userSettings": "~/.m2/settings.xml",
  "java.codeGeneration.useBlocks": true,
  "java.configuration.updateBuildConfiguration": "interactive",
  "java.autobuild.enabled": false,
  "java.format.settings.url": "https://raw.githubusercontent.com/google/styleguide/gh-pages/eclipse-java-google-style.xml",
  "java.format.enabled": true,
  "java.format.onType.enabled": true,
  "java.format.comments.enabled": true,
  "java.errors.incompleteClasspath.severity": "ignore",
  "java.jdt.ls.vmargs": "-noverify -Xmx4G -XX:+UseG1GC -XX:+UseStringDeduplication -javaagent:/usr/local/share/lombok/lombok.jar -Xbootclasspath/a:/usr/local/share/lombok/lombok.jar",
  "yaml.completion": true,
  "yaml.validate": false,
  "yaml.schemas": {
    "~/go/src/github.com/awslabs/goformation/schema/cloudformation.schema.json": "/*.template.*",
    "kubernetes": "/*"
  },
  "yaml.customTags": [
    "!Ref",
    "!GetAtt",
    "!fn",
    "!And",
    "!If",
    "!Not",
    "!Equals",
    "!Or",
    "!FindInMap sequence",
    "!Base64",
    "!Cidr",
    "!Sub",
    "!GetAZs",
    "!ImportValue",
    "!Select",
    "!Split",
    "!Join sequence"
  ],
  "diagnostic-languageserver.formatFiletypes": {
    "python": ["black"]
  },
  "diagnostic-languageserver.formatters": {
    "black": {
      "command": "black",
      "args": ["-q", "-"]
    }
  },
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "args": ["--background-index", "--fallback-style=google"],
      "rootPatterns": [
        "compile_flags.txt",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": ["c", "cpp", "cc", "c++", "objc", "objcpp"]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.work", "go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": ["terraform", "tf"],
      "initializationOptions": {},
      "settings": {}
    }
  },
  "coc.source.buffer.enable": true,
  "coc.source.buffer.priority": 1,
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnTypeFiletypes": ["python"],
  "coc.preferences.formatOnSaveFiletypes": ["*"],
  "coc.preferences.extensionUpdateCheck": "weekly",
  "coc.preferences.useQuickfixForLocations": true,
  "coc.preferences.maxFileSize": "100MB",
  "solargraph.formatting": true,
  "solargraph.definitions": true,
  "solargraph.references": true,
  "solargraph.autoformat": true
}
