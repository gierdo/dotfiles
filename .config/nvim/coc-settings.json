{
  "java.import.gradle.enabled": true,
  "java.import.maven.enabled": true,
  "java.maven.downloadSources": true,
  "java.eclipse.downloadSources": true,
  "java.maxConcurrentBuilds": 1,
  "java.import.maven.offline.enabled": true,
  "java.configuration.maven.userSettings": "~/.m2/settings.xml",
  "java.codeGeneration.useBlocks": true,
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.autobuild.enabled": false,
  "java.format.settings.url": "https://raw.githubusercontent.com/google/styleguide/gh-pages/eclipse-java-google-style.xml",
  "java.format.enabled": true,
  "java.format.onType.enabled": true,
  "java.format.comments.enabled": true,
  "java.errors.incompleteClasspath.severity": "ignore",
  "java.jdt.ls.vmargs": "-noverify -Xmx4G -XX:+UseG1GC -XX:+UseStringDeduplication",
  "sumneko-lua.enableNvimLuaDev": true,
  "yaml.completion": true,
  "yaml.validate": true,
  "yaml.schemaStore.enable": true,
  "yaml.schemaStore.url": "https://www.schemastore.org/api/json/catalog.json",
  "yaml.schemas": {
    "kustomization": [
      "**/kustomization.y*ml",
      "**/*.patch.y*ml"
    ],
    "https://raw.githubusercontent.com/awslabs/goformation/master/schema/cloudformation.schema.json": [
      "**/*.template.y*ml",
      "**/*-template.y*ml"
    ]
  },
  "yaml.customTags": [
    "!And scalar",
    "!If scalar",
    "!Not",
    "!Equals scalar",
    "!Or scalar",
    "!FindInMap scalar",
    "!Base64",
    "!Cidr",
    "!Ref",
    "!Sub",
    "!GetAtt sequence",
    "!GetAZs",
    "!ImportValue sequence",
    "!Select sequence",
    "!Split sequence",
    "!Join sequence"
  ],
  "pyright.disableDiagnostics": false,
  "prettier.formatterPriority": -1,
  "diagnostic-languageserver.filetypes": {
    "cpp": [
      "clangtidy",
      "cppcheck",
      "cpplint",
      "flawfinder"
    ],
    "python": [
      "mypy",
      "pylint",
      "flake8",
      "bandit"
    ],
    "c": [
      "clangtidy",
      "cppcheck",
      "flawfinder"
    ],
    "yaml": [
      "yamllint"
    ],
    "cloudformation.yaml": [
      "cloudformation",
      "yamllint"
    ],
    "vim": "vint",
    "email": "languagetool",
    "markdown": [
      "write-good",
      "markdownlint"
    ],
    "sh": "shellcheck",
    "cmake": [
      "cmake-lint",
      "cmakelint"
    ],
    "systemd": "systemd-analyze"
  },
  "diagnostic-languageserver.formatFiletypes": {
    "python": [
      "black",
      "isort"
    ],
    "sh": "shfmt",
    "json": [
      "fixjson",
      "jq"
    ],
    "go": [
      "goimports",
      "gofmt"
    ],
    "rust": [
      "rustfmt"
    ],
    "ruby": [
      "rubocop"
    ],
    "typescript": [
      "eslint"
    ],
    "kotlin": [
      "ktlint"
    ],
    "yaml": [
      "yamlfmt"
    ]
  },
  "diagnostic-languageserver.formatters": {
    "shfmt": {
      "comment": "indent with two spaces",
      "command": "shfmt",
      "args": [
        "-i",
        "2"
      ]
    }
  },
  "clangd.arguments": [
    "--background-index",
    "--fallback-style=google"
  ],
  "coc.source.buffer.enable": true,
  "coc.source.buffer.priority": 1,
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSave": true,
  "[yaml]": {
    "coc.preferences.formatOnType": false
  },
  "[kotlin]": {
    "coc.preferences.formatOnSave": false
  },
  "coc.preferences.formatOnSaveTimeout": 500,
  "coc.preferences.extensionUpdateCheck": "weekly",
  "coc.preferences.useQuickfixForLocations": true,
  "coc.preferences.maxFileSize": "50MB",
  "snippets.ultisnips.pythonPrompt": false
}
