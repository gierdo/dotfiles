{
  "java.import.gradle.enabled": true,
  "java.import.maven.enabled": true,
  "java.maven.downloadSources": true,
  "java.eclipse.downloadSources": true,
  "java.maxConcurrentBuilds": 1,
  "java.import.maven.offline.enabled": true,
  "java.configuration.maven.userSettings": "~/.m2/settings.xml",
  "java.codeGeneration.useBlocks": true,
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.autobuild.enabled": false,
  "java.format.settings.url": "https://raw.githubusercontent.com/google/styleguide/gh-pages/eclipse-java-google-style.xml",
  "java.format.enabled": true,
  "java.format.onType.enabled": true,
  "java.format.comments.enabled": true,
  "java.errors.incompleteClasspath.severity": "ignore",
  "java.jdt.ls.vmargs": "-noverify -Xmx4G -XX:+UseG1GC -XX:+UseStringDeduplication",
  "yaml.completion": true,
  "yaml.validate": true,
  "yaml.schemaStore.enable": true,
  "yaml.schemaStore.url": "https://www.schemastore.org/api/json/catalog.json",
  "yaml.schemas": {
    "kustomization": [
      "**/kustomization.y*ml",
      "**/*.patch.y*ml"
    ]
  },
  "yaml.customTags": [
    "!Ref",
    "!GetAtt",
    "!fn",
    "!And",
    "!If",
    "!Not",
    "!Equals",
    "!Or",
    "!FindInMap sequence",
    "!Base64",
    "!Cidr",
    "!Sub",
    "!GetAZs",
    "!ImportValue",
    "!Select",
    "!Split",
    "!Join sequence"
  ],
  "diagnostic-languageserver.formatFiletypes": {
    "python": [
      "black"
    ]
  },
  "diagnostic-languageserver.formatters": {
    "black": {
      "command": "black",
      "args": [
        "-q",
        "-"
      ]
    }
  },
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "args": [
        "--background-index",
        "--fallback-style=google"
      ],
      "rootPatterns": [
        "compile_flags.txt",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "c",
        "cpp",
        "cc",
        "c++",
        "objc",
        "objcpp"
      ]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.work",
        "go.mod",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "go"
      ],
      "initializationOptions": {
        "usePlaceholders": true
      }
    },
    "bash": {
      "command": "bash-language-server",
      "args": [
        "start"
      ],
      "filetypes": [
        "sh"
      ],
      "ignoredRootPaths": [
        "~"
      ]
    },
    "terraform": {
      "command": "terraform-ls",
      "args": [
        "serve"
      ],
      "filetypes": [
        "terraform",
        "tf"
      ],
      "initializationOptions": {},
      "settings": {}
    }
  },
  "coc.source.buffer.enable": true,
  "coc.source.buffer.priority": 1,
  "coc.preferences.formatOnType": false,
  "coc.preferences.formatOnSave": true,
  "[python]": {
    "coc.preferences.formatOnType": true
  },
  "[yaml][json]": {
    "coc.preferences.formatOnSave": false
  },
  "coc.preferences.formatOnSaveTimeout": 500,
  "coc.preferences.extensionUpdateCheck": "weekly",
  "coc.preferences.useQuickfixForLocations": true,
  "coc.preferences.maxFileSize": "100MB"
}
