--hidden
--smart-case
--no-messages

# exclude specific directories
--glob=!**/.{git,svn,bzr,hg,pc,dep,dot,nib,plst,*cache}/*
--glob=!**/.{conan,clangd}/*
--glob=!**/.local/share/containers/*
--glob=!**/{python-build,__pycache__,site-packages}/*
--glob=!**/{node_modules,.vscode-test}/*

# exclude specific filetypes
--glob=!**/*.{o,so,jar,ser}

# exclude specific files
--glob=!**/{tags}
